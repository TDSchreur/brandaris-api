{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "brandaris_api_name": {
            "type": "String"
        },
        "brandaris_ai_name": {
            "type": "String"
        },
        "brandaris_api_serviceplan_name": {
            "type": "String"
        },
        "brandaris_api_serviceplan_capacity": {
            "type": "int",
            "defaultValue": 1,
            "minValue": 1,
            "maxValue": 5,
            "metadata": {
                "description": "Describes plan's instance count"
            }
        },
        "brandaris_api_serviceplan_sku": {
            "type": "string",
            "allowedValues": [
                "F1",
                "D1",
                "B1",
                "B2",
                "B3",
                "S1",
                "S2",
                "S3",
                "P1",
                "P2",
                "P3",
                "P4"
            ]
        }
    },
    "variables": {
        "serverfarms-apiversion": "2018-02-01",
        "webplan-configuration": {
            "perSiteScaling": false,
            "maximumElasticWorkerCount": 1,
            "isSpot": false,
            "reserved": false,
            "isXenon": false,
            "hyperV": false,
            "targetWorkerCount": 0,
            "targetWorkerSizeId": 0
        },
        "api-configuration": {
            "netFrameworkVersion": "v4.0",
            "phpVersion": "off",
            "requestTracingEnabled": false,
            "remoteDebuggingEnabled": false,
            "httpLoggingEnabled": false,
            "logsDirectorySizeLimit": 35,
            "detailedErrorLoggingEnabled": false,
            "publishingUsername": "$brandaris-api",
            "use32BitWorkerProcess": false,
            "webSocketsEnabled": false,
            "alwaysOn": true,
            "managedPipelineMode": "Integrated",
            "loadBalancing": "LeastRequests",
            "autoHealEnabled": false,
            "localMySqlEnabled": false,
            "ipSecurityRestrictions": [
                {
                    "ipAddress": "Any",
                    "action": "Allow",
                    "priority": 1,
                    "name": "Allow all",
                    "description": "Allow all access"
                }
            ],
            "scmIpSecurityRestrictions": [
                {
                    "ipAddress": "Any",
                    "action": "Allow",
                    "priority": 1,
                    "name": "Allow all",
                    "description": "Allow all access"
                }
            ],
            "scmIpSecurityRestrictionsUseMain": false,
            "http20Enabled": true,
            "minTlsVersion": "1.2",
            "healthCheckPath": "/health/readiness"
        }
    },
    "resources": [

        {
            "name": "[parameters('brandaris_ai_name')]",
            "type": "microsoft.insights/components",
            "location": "[resourceGroup().location]",
            "apiVersion": "2015-05-01",
            "kind": "web",
            "dependsOn": [],
            "properties": {
                "ApplicationId": "[parameters('brandaris_ai_name')]",
                "Application_Type": "web"
            }
        },

        {
            "type": "Microsoft.Web/serverfarms",
            "apiVersion": "[variables('serverfarms-apiversion')]",
            "name": "[parameters('brandaris_api_serviceplan_name')]",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "[parameters('brandaris_api_serviceplan_sku')]",
                "capacity": "[parameters('brandaris_api_serviceplan_capacity')]"
            },
            "kind": "app",
            "properties": "[variables('webplan-configuration')]"
        },

        {
            "type": "Microsoft.Web/sites",
            "apiVersion": "2018-11-01",
            "name": "[parameters('brandaris_api_name')]",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', parameters('brandaris_api_serviceplan_name'))]",
                "[concat('Microsoft.Insights/components/', parameters('brandaris_ai_name'))]"
            ],
            "kind": "api",
            "properties": {
                "enabled": true,
                "hostNameSslStates": [
                    {
                        "name": "[concat(parameters('brandaris_api_name'), '.azurewebsites.net')]",
                        "sslState": "Disabled",
                        "hostType": "Standard"
                    },
                    {
                        "name": "[concat(parameters('brandaris_api_name'), '.scm.azurewebsites.net')]",
                        "sslState": "Disabled",
                        "hostType": "Repository"
                    }
                ],
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('brandaris_api_serviceplan_name'))]"
            },
            "resources": [
                {
                    "apiVersion": "[variables('serverfarms-apiversion')]",
                    "type": "config",
                    "dependsOn": [
                        "[resourceId('Microsoft.Web/Sites', parameters('brandaris_api_name'))]"
                    ],
                    "name": "appsettings",
                    "properties": {
                        "ApplicationInsights:InstrumentationKey": "[reference(concat('Microsoft.Insights/components/', parameters('brandaris_ai_name'))).InstrumentationKey]"
                    }
                },
                {
                    "type": "config",
                    "apiVersion": "[variables('serverfarms-apiversion')]",
                    "name": "web",
                    "dependsOn": [
                        "[resourceId('Microsoft.Web/Sites', parameters('brandaris_api_name'))]"
                    ],
                    "properties": "[variables('api-configuration')]"
                }
            ]
        },

        {
            "type": "Microsoft.Web/sites/hostNameBindings",
            "apiVersion": "2018-11-01",
            "name": "[concat(parameters('brandaris_api_name'), '/', parameters('brandaris_api_name'), '.azurewebsites.net')]",
            "location": "West Europe",
            "dependsOn": [
                "[resourceId('Microsoft.Web/sites', parameters('brandaris_api_name'))]"
            ],
            "properties": {
                "siteName": "brandaris-api",
                "hostNameType": "Verified"
            }
        }
    ]
}